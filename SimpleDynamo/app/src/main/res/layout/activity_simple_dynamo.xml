<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleDynamoActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_dump" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/button_delete" />

    <EditText
        android:id="@+id/edit_txt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:hint="Enter Key"
        android:padding="5dp" />

    <Button
        android:id="@+id/btn_test_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="@string/button_test_insert" />

    <Button
        android:id="@+id/btn_test_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button2"
        android:text="@string/button_test_query" />


    <TextView
        android:id="@+id/prev_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_test_insert"
        android:paddingLeft="5dp"
        android:text="@string/txt_prev_node"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port0" />

    <TextView
        android:id="@+id/txt_prev_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/prev_node"
        android:paddingLeft="23dp"
        android:text="-- -- -- --"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port1" />

    <TextView
        android:id="@+id/next_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_test_insert"
        android:paddingRight="5dp"
        android:text="@string/txt_next_node"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port0" />

    <TextView
        android:id="@+id/txt_next_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/next_node"
        android:paddingRight="23dp"
        android:text="-- -- -- --"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port1" />

    <TextView
        android:id="@+id/dynamo_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_next_node"
        android:paddingRight="5dp"
        android:text="@string/txt_dynamo_ring"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port0" />

    <TextView
        android:id="@+id/txt_dynamo_ring_nodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dynamo_ring"
        android:paddingRight="5dp"
        android:text="-- -- -- --"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/remote_port1"  />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_dynamo_ring_nodes"
        android:fadeScrollbars="true"
        android:gravity="bottom"
        android:maxLines="50"
        android:scrollbars="vertical" />

</RelativeLayout>